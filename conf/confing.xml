<?xml version="1.0" encoding="UTF-8"?>

<config>
    <!--日期配置-->
    <sys>
        <workmode>DEBUG</workmode>
        <log-level>DEBUG</log-level><!--DEBUG:调试级别 INFO:一般调试信息 ERROR:错误级别 -->
    </sys>

    <!--终端服务配置-->
    <redis>
        <host>127.0.0.1</host><!--REDIS地址-->
        <port>6379</port><!--REDIS端口-->
        <index>0</index><!--REDIS DB号-->
    </redis>
    
    <!--工作线程-->
    <worker>
        <processes>5</processes><!--工作进程个数-->
    </worker>
</config>

